{% extends "base.twig" %}
{% block title %}Termékek{% endblock %}

{% block content %}
<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
  <h2 class="h4 mb-0">Termékek</h2>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <form method="get" action="/products" class="row g-2 align-items-end">
      <div class="col-12 col-md-6">
        <label class="form-label">Keresés</label>
        <input class="form-control" name="q" placeholder="Pl. iPhone, laptop..." value="{{ q|e }}">
      </div>

      <div class="col-12 col-md-4">
        <label class="form-label">Kategória</label>
        <select class="form-select" name="category">
          <option value="">Összes kategória</option>
          {% for c in categories %}
            <option value="{{ c.Id }}" {% if selectedCategory == c.Id %}selected{% endif %}>
              {{ c.Nev }}
            </option>
          {% endfor %}
        </select>
      </div>

      <div class="col-12 col-md-2 d-grid">
        <button class="btn btn-dark" type="submit">Szűrés</button>
      </div>
    </form>
  </div>
</div>

{% if products|length == 0 %}
  <div class="alert alert-info">Nincs találat.</div>
{% else %}

  <div class="row g-3">
    {% for p in products %}
      <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start gap-2 mb-2">
              <h3 class="h6 mb-0">{{ p.Nev }}</h3>
              <span class="badge text-bg-secondary">{{ p.Kategoria }}</span>
            </div>

            <div class="mt-2">
              <div class="h5 mb-0">
                {{ p.Ar|number_format(0, '.', ' ') }} Ft
              </div>
              <div class="small text-muted">
                Készlet:
                {% if p.Keszlet > 0 %}
                  <span class="text-success fw-semibold">{{ p.Keszlet }}</span>
                {% else %}
                  <span class="text-danger fw-semibold">Nincs készleten</span>
                {% endif %}
              </div>
            </div>

            <div class="mt-auto pt-3">
              {% if p.Keszlet > 0 %}
                <form method="post" action="/cart/add" class="d-flex gap-2 align-items-center">
                  <input type="hidden" name="product_id" value="{{ p.Id }}">

                  <div class="input-group input-group-sm" style="max-width: 120px;">
                    <span class="input-group-text">db</span>
                    <input
                      type="number"
                      name="qty"
                      class="form-control"
                      value="1"
                      min="1"
                      max="{{ p.Keszlet }}">
                  </div>

                  <button class="btn btn-success btn-sm flex-grow-1" type="submit">
                    Kosárba
                  </button>
                </form>
              {% else %}
                <button class="btn btn-outline-secondary btn-sm w-100" type="button" disabled>
                  Nem elérhető
                </button>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

{% endif %}
{% endblock %}
