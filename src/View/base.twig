<!doctype html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Webshop{% endblock %}</title>

  {# Bootstrap 5 CSS #}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg">

  {# Opcionális saját stílus #}
  <style>
    .brand-dot { width: .6rem; height: .6rem; border-radius: 999px; display:inline-block; margin-right:.5rem; }
  </style>
</head>

<body class="bg-light d-flex flex-column min-vh-100">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="/products">
      <span class="brand-dot bg-success"></span>
      Elektronikai Webáruház
    </a>

    <button class="navbar-toggler" type="button"
            data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Menü">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">

        {% if user and user.role == 'ADMIN' %}
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin</a>
          </li>
        {% endif %}

        {% if user %}
          <li class="nav-item">
            <span class="navbar-text text-white-50">
              Szia, <strong class="text-white">{{ user.name }}</strong>!
            </span>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/profile">Profil</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/orders">Rendeléseim</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/cart">
              Kosár
              <span class="badge bg-success ms-1">{{ cartCount }}</span>
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/checkout">Checkout</a>
          </li>

          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm ms-lg-2" href="/logout">Kijelentkezés</a>
          </li>

        {% else %}
          <li class="nav-item">
            <a class="nav-link" href="/register">Regisztráció</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-success btn-sm ms-lg-2" href="/login">Belépés</a>
          </li>
        {% endif %}

      </ul>
    </div>
  </div>
</nav>

<main class="container py-4 flex-fill">
  {% block content %}{% endblock %}
</main>

<footer class="border-top bg-white mt-auto">
  <div class="container py-3 small text-muted d-flex justify-content-between flex-wrap gap-2">
    <span>© {{ "now"|date("Y") }} Elektronikai Webáruház</span>
    <span>PHP 8 + SQL Server + Twig</span>
  </div>
</footer>

{# Bootstrap 5 JS (togglerhez kell) #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{% block scripts %}{% endblock %}
</body>
</html>
